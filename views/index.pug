extends layout

block content
  h1= title

  div(class="col-md-4")
    h2 Create job

    form(action="/jobs/create", method="post", class="well")
      div(class="form-group")

        label(for="title")
          | Title
        input(type="text", name="title", class="form-control")

        label(for="company")
          | Company
        input(type="text", name="company", class="form-control")

        label(for="city")
          | City
        input(type="text", name="city", class="form-control")

        label(for="state")
          | State
        input(type="text", name="state", class="form-control")

        label(for="description")
          | Description
        input(type="text", name="description", class="form-control")

        label(for="url")
          | URL
        input(type="text", name="url", class="form-control")

        label(for="salaryMin")
          | Salary Minimum
        input(type="text", name="salaryMin", class="form-control")

        label(for="salaryMax")
          | Salary Maximum
        input(type="text", name="salaryMax", class="form-control")

        label(for="contactName")
          | Contact Name
        input(type="text", name="contactName", class="form-control")

        label(for="contactEmail")
          | Contact Email
        input(type="text", name="contactEmail", class="form-control")

      input(type="submit" class="btn btn-default")

  div(class="col-md-6")
    h2 Jobs

    ul
      each job in jobs
        li
          strong
            = job.title + " at " + job.company
          | &nbsp;
          a(href="/jobs/" + job.id + "/destroy", class="btn btn-xs btn-warning") delete